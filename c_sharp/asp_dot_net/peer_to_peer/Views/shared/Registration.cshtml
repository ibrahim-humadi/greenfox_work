@model string

@{
    ViewData["Title"] = "Registration";
}

<h1>Registration</h1>

<h2>Login</h2>

<form action="login" method="post">
    Username: <input type="text" name="username">
    <br />
    <input type="submit" value="Submit">
</form>

<h2>Register</h2>
<form action="register" method="post">
    Username: <input type="text" name="username">
    <br />
    <input type="submit" value="Submit">
</form>

@if (Model != null)
{
    @Model
}